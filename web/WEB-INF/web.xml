<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MovieControl</servlet-name>
        <servlet-class>Controller.MovieControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>Controller.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientStatControl</servlet-name>
        <servlet-class>Controller.ClientStatControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientDetailControl</servlet-name>
        <servlet-class>Controller.ClientDetailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieStatControl</servlet-name>
        <servlet-class>Controller.MovieStatControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieDetailControl</servlet-name>
        <servlet-class>Controller.MovieDetailControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutControl</servlet-name>
        <servlet-class>Controller.LogoutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTimeControl</servlet-name>
        <servlet-class>Controller.ShowTimeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDateControl</servlet-name>
        <servlet-class>Controller.ShowDateControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingControl</servlet-name>
        <servlet-class>Controller.BookingControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieControl</servlet-name>
        <url-pattern>/MovieControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/LoginControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientStatControl</servlet-name>
        <url-pattern>/ClientStatControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientDetailControl</servlet-name>
        <url-pattern>/ClientDetailControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieStatControl</servlet-name>
        <url-pattern>/MovieStatControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieDetailControl</servlet-name>
        <url-pattern>/MovieDetailControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutControl</servlet-name>
        <url-pattern>/LogoutControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowTimeControl</servlet-name>
        <url-pattern>/ShowTimeControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDateControl</servlet-name>
        <url-pattern>/ShowDateControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingControl</servlet-name>
        <url-pattern>/BookingControl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
